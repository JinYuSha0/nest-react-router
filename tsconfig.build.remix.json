{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./packages/nestjs-remix",
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "nestjs-remix",
    "test",
    "__test__",
    "**/__test__/**/*",
    "**/*spec.ts",
    "**/*it.ts",
    "**/*test.ts",
    "**/*e2e.ts",
    "**/*e2e-spec.ts"
  ]
}
